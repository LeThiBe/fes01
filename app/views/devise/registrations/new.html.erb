<div class="register">
  <div class="container">
    <div class="register-top heading">
      <h2><%= t("users.new.title") %></h2>
    </div>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      <div class="register-main">
        <div class="col-md-6 account-left">
          <%= f.text_field :name, autofocus: true, placeholder: true, required: true %>
          <%= f.email_field :email, autofocus: true, placeholder: true, required: true %>
          <%= f.text_field :phone, autofocus: true, placeholder: true, required: true %>
        </div>
        <div class="col-md-6 account-left">
          <%= f.password_field :password, autocomplete: "new-password", placeholder: true, required: true %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: true, required: true %>
        </div>
        <div class="clearfix"></div>
      </div>
      <div class="address submit">
        <%= f.submit t("users.new.sign_up"), class: "btn btn-primary" %>
      </div>
    <% end %>
    <div class="section-link-regist">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
